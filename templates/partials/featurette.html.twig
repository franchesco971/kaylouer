<!-- START THE FEATURETTES -->

<hr class="featurette-divider">
{% for category in categories %}
    {% if loop.index is divisible by(2) %}
        {% set class1 = 'order-md-1' %}
        {% set class2 = 'order-md-2' %}
    {% else %}
        {% set class1 = 'order-md-2' %}
        {% set class2 = 'order-md-1' %}
    {% endif %}
    <div class="row featurette">
        <div class="col-md-7 {{ class1 }}">
            <h2 class="featurette-heading">
                <a href="{{ path('category_show', { slug: category.slug }) }}">{{ category.name | upper }}</a>
            </h2>
            <p class="lead">{{ category.description }}</p>
        </div>
        <div class="col-md-5 {{ class2 }}">
            <a href="{{ path('category_show', { slug: category.slug }) }}">
                <img class="featurette-image img-fluid mx-auto" src="{{ category.caption }}" alt="{{ category.name }}">
            </a>
        </div>
    </div>

    <hr class="featurette-divider">

{% endfor %}

<!-- /END THE FEATURETTES -->