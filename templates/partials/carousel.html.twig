<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for category in categories %}
            <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for category in categories %}
            <div class="carousel-item{% if loop.first %} active{% endif %}">
                <img class="first-slide" src="{{ category.caption }}" alt="{{ category.name }}">
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>{{ category.name | upper }}</h1>
                        {{ category.description | raw }}
                        <p><a class="btn btn-lg btn-primary mt-2" href="{{ path('category_show', {'slug': category.slug}) }}" role="button">Plus d'infos</a></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>